page {
  overflow: hidden;
}
.logo {
  display: block;
  width: 374rpx;
  height: 274rpx;
  margin-top: 50rpx;
  margin-left: auto;
  margin-right: auto;
}

.method {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 60rpx;
  width: 100%;
