  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  height: 100rpx;
  border: 2rpx solid #09BB07;
  border-radius: 100rpx;
  color: #09BB07;
}

.icon_wechat {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
}