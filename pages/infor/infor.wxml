<view class="infor">
  <van-cell title="头像" size="large">
    <image class='infor_pic' src='/image/icon_thumb.png' mode='aspectFit'></image>
  </van-cell>
  <van-field label="真实姓名" placeholder="请输入真实姓名" size="large"></van-field>
  <van-cell title="性别" size="large"></van-cell>
  <van-radio-group value="{{radioVal}}" bind:change="onChange">
    <van-cell-group>
      <van-cell title="男" clickable data-name="1" bind:click="onClick">
        <van-radio name="1" checked-color="#f44" />
      </van-cell>
      <van-cell title="女" clickable data-name="2" bind:click="onClick">
        <van-radio name="2" checked-color="#f44" />
      </van-cell>
    </van-cell-group>
  </van-radio-group>
  <van-field label="手机号码" placeholder="请输入手机号码" size="large"></van-field>
  <view class='infor_btn'>
    <van-button size='large' type='danger' custom-class='saveInfor'>保存信息</van-button>
  </view>

</view>

