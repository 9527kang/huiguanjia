/* pages/hotel_detail/hotel_detail.wxss */
page {
  background-color: #fff;
}
.detail_banner {
  position: relative;
  height: 548rpx;
}
swiper {
  height: 548rpx;
}

.slide-image {
  width: 100%;
  height: 548rpx;
}

.swiper_num {
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
  font-size: 16px;
  color: #fff;
  z-index: 1;
}

.swiper_title {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 16px;
  text-align: center;
  background: rgba(255, 255, 255, .6);
}

.swiper_close {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: 40rpx;
  top: 50%;
  transform: translateY(-50%);
}

.detail_price {
  padding: 24rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e6e6e6;
}

.detail_title {
  font-size: 15px;
}

.detail_cont {
  font-size: 12px;
}

.detail_cont text {
  font-size: 16px;
}

.detail_num {
  text-align: right;
}

.col {
  color: #E6A226;
}

.detail_container {
  padding: 24rpx;
}
