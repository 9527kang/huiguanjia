/* pages/detail/detail.wxss */
page {
  padding-bottom: 100rpx;
}
.detail_banner {
  position: relative;
  height: 548rpx;
}
swiper {
  height: 548rpx;
}

.slide-image {
  width: 100%;
  height: 548rpx;
}

.swiper_num {
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
  font-size: 16px;
  color: #fff;
  z-index: 1;
}
.valCol {
  color: #FAA21B!important;
  flex: none!important;
}

.rateClas {
  display: flex!important;
}

.detail_rate {
  position: relative;
}

.detail_score {
  position: absolute;
  top: 0;
  left: 300rpx;
  line-height: 80rpx;
  color: #666;
}

.detail_kind {
  padding: 40rpx;
  border-bottom: 1px solid #e6e6e6;
  background-color: #fff;
}

.detail_cell {
  text-align: center;
  padding: 20rpx 0;
  border: 1px solid #E6E6E6;
}

.detail_icon {
  width: 45rpx;
  height: 45rpx;
}

.detail_cont {
  padding: 24rpx;
  background-color: #fff;
}

.freeCheck {
  display: block!important;
  position: fixed!important;
  bottom: 0!important;
  left: 0!important;
  width: 100%!important;
  background-color: #FF6969!important;
  z-index: 99!important;
}

.tabTit {
  background-color: #000!important;
}

.tabClas {
  color: #f44!important;
}

.tabActive {
  color: #f44!important;
}

.send_to {
  background-color: #FF6969!important;
}

.icon_down {
  width: 16rpx;
  height: 9rpx;
  margin-left: 12rpx;
  vertical-align: middle;
}

.top_box {
  width: 100%;
  overflow: hidden;
}

.tan_top {
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 16px;
  text-align: center;
  border-bottom: 1rpx solid #f3f3f3;
}

.tan_list {
  padding: 0 20rpx;
}

.tan_close {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
}

.meeting_date {
  color: #333!important;
}

.tan_tips {
  font-size: 12px;
  line-height: 44rpx;
  padding: 24rpx;
  color: #8c8c8c;
}

.tan_tel {
  color: #f44;
}

.border {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0 auto 20rpx;
  height: 62rpx;
  line-height: 58rpx;
  text-align: center;
  box-sizing: border-box;
  border: 1rpx solid #e6e6e6;
}

.border.col {
  color: #f44;
  border-color: #f44;
}
